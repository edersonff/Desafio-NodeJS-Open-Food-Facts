generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum ProductStatus {
  draft
  trash
  published
}

model Product {
  id          String          @map("_id") @id @default(cuid())
  data        Json
  imported_t  Int
  status      ProductStatus   @default(draft)
}
